.citation {
  width: 48%;
  display: flex;
  flex-direction: column;
  @include tablets {
    width: initial;
  }


  &__text {
    opacity: 0.3;
    font-size: 16px;
    font-weight: normal;
    font-style: normal;
    line-height: 1.88;
    color: rgb(255, 255, 255);
    margin-bottom: 25px;
  }

  &__author {
    font-size: 16px;
    font-weight: normal;
    font-style: italic;
    color: #ffffff;
  }
}