.connect {
  position: relative;

  &__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  &__title {
    margin-bottom: 5%;
    @include tablets {
      margin-bottom: 5%;
      text-align: center;
    }
  }

  &__content {
    width: 58%;
    @include desktop {
      width: 77%;
    }
    @include tablets {
      width: initial;
    }
  }
}