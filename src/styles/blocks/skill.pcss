  .skill {
    position: relative;
    font-size: 0;

    &__title {
      position: absolute;
      top: 50%;
      left: 50%;
      opacity: 0.5;  
      text-align: center;
      font-size: 18px;
      transform: translate(-50%, -50%); 
    }

    &__circle_top {
      stroke-dasharray: 422;
      stroke-dashoffset: 50;
    }
    
    &__gradient {
      position: absolute;
      visibility: hidden;
    }
  }

