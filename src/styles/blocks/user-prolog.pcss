.user-prolog {
  position: relative;

  &__text {
    text-align: right;
    font-family: "Open Sans", Helvetica, sans-serif;
    font-weight: 600;
    font-style: normal;
    font-size: 18px;
    opacity: 0.4;
    position: absolute;
    top: 0;
    left: -65%;
    line-height: 1.7;
  }

  &__title {
    text-align: center;
    font-family: "Open Sans", Helvetica, sans-serif;
    font-weight: 800;
    font-style: normal;
    font-size: 72px;
    line-height: 0.83;
  }
}

