.works {
  background-color: rgb(248, 248, 248);
  min-height: 100vh;
  height: initial;
  padding: 30px 0;

  &__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  &__title {
    margin-bottom: 6%;
    color: #333c49;

    @include phones {
      text-align: center;
    }
  }

  &__content {
    width: 100%;
  }
}