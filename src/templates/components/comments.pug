script(type='text/x-template')#slider-comments
  .slider-comments
    .slider-comments__btns
      button(
        @click="previous(), handleSlide('prev')"
        :class='{none: currentIndex === 0}'
        ).btn-pointer.slider-comments__btn-nav.slider-comments__btn-nav_prev
        +icon('arrow-down', 'btn-pointer__icon  btn-pointer__prev')
      button(
        @click="next(), handleSlide('next')"
        :class='{none: currentIndex === (comments.length-1)}'
        ).btn-pointer.slider-comments__btn-nav.slider-comments__btn-nav_next
        +icon('arrow-down', 'btn-pointer__icon  btn-pointer__next')

    .slider-comments__wrap
      flickity.slider-comments__list(ref="flickity" :options="flickityOptions")
        .slider-comments__item.carousel-cell(v-for='comment in comments' :key='comment.id')

          .slider-comments__item-wrap
            .slider-comments__text
              p {{comment.text}}

            .slider-comments__avatar
              .slider-comments__photo
                .avatar
                  img(:src=`comment.photo`).avatar__img
              .slider-comments__info
                h4.user-name.slider-comments__name {{comment.name}}
                .user-name__prof {{comment.occ}}